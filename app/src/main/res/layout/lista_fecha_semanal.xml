<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contenido_fecha"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="F" />

        <TextView
            android:id="@+id/contenido_fecha1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="13/01" />

        <TextView
            android:id="@+id/contenido_fecha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="14/01" />

        <TextView
            android:id="@+id/contenido_fecha3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="15/01" />

        <TextView
            android:id="@+id/contenido_fecha4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="16/01" />

        <TextView
            android:id="@+id/contenido_fecha5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="17/01" />

        <TextView
            android:id="@+id/contenido_fecha6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="18/01" />

        <TextView
            android:id="@+id/contenido_fecha7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/stylo_border_tablas"
            android:gravity="center"
            android:text="19/01" />
    </TableRow>
</LinearLayout>